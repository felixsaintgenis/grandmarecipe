{
  "name": "grandmarecipe",
  "version": "1.0.0",
  "description": "a chef d'oeuvre project",
  "main": "api/app.js",
  "proxy": {
    "/api/*": {
      "target": "http://localhost:5000",
      "changeOrigin": true
    }
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "server": "nodemon api/app.js --exec babel-node --presets=env",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^3.6.1",
    "cors": "^2.8.4",
    "eslint-plugin-node": "^6.0.1",
    "express": "^4.16.3",
    "gravatar": "^1.6.0",
    "husky": "^1.2.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "lint-staged": "^8.1.0",
    "mongoose": "^5.2.13",
    "nodemon": "^1.18.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react": "^16.5.2",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "validator": "^10.7.1"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "stylelint-config-recommended": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
